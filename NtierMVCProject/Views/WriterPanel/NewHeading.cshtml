
@using EntityLayer.Concrete
@model Heading

@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Başlık Adı")
            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HeadingName)
            <br />
            <br />
            @Html.Label("Kategori")
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.VBcategory, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryID)
            <br />
            <br />
            <button class="btn btn-primary">Ekle</button>

        </div>
    }
</div>